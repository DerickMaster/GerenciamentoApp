<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#1f2130"
    android:id="@+id/linearLayout1">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_gravity="center">
        <TextView
            android:text="Editar Cadastro"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="114.5dp"
            android:id="@+id/textView1"
            android:paddingTop="100px"
            android:layout_gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_gravity="center"
        android:paddingLeft="50px"
        android:paddingRight="50px">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:id="@+id/editText2_name" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cpf"
            android:id="@+id/editText2_cpf" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NÃºmero do Telefone"
            android:id="@+id/editText2_cellphone" />
        <EditText
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de Nascimento DD/MM/AAAA"
            android:id="@+id/editText2_birthDate" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4">
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:paddingRight="25px"
        android:paddingLeft="25px">
        <Button
            android:text="Cadastrar"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background = "@drawable/roudbutton"
            android:layout_width="match_parent"
            android:layout_height="67.0dp"
            android:id="@+id/button_edit" />
    </LinearLayout>
</LinearLayout>
